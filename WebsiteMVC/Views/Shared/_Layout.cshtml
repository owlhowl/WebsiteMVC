<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" type="text/css">
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" type="text/css">
    <link rel="shortcut icon" href="~/img/logo.png">
</head>
<body>
    <header class="p-3 text-white" style="background-color: #0f0f0f;">
        <div class="container">
            <div class="d-flex flex-nowrap align-items-center justify-content-center">
                <ul class="nav col-auto me-auto justify-content-center">
                    <li>
                        <a href="/" class="d-flex align-items-center mb-0 text-white">
                            <img class="me-3" src="~/img/logo.png" height="45"/>
                        </a>
                    </li>
                    <li><a asp-controller="Home" asp-action="Index" class="nav-link text-white">Главная</a></li>
                    <li><a asp-controller="Blog" asp-action="List" class="nav-link text-white">Блог</a></li>
                    <li><a asp-controller="Home" asp-action="Index" class="nav-link text-white">FAQ</a></li>
                    <li><a asp-controller="Home" asp-action="Index" class="nav-link text-white">О сайте</a></li>
                </ul>
                @if (User.Identity.IsAuthenticated)
                {
                <div class="dropdown">
                    <button class="btn btn-outline-light btn dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
                        @User.Identity.Name
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton" style="">
                        <li><a class="dropdown-item" href="#">Мой профиль</a></li>
                        <li><a class="dropdown-item" href="#">Настройки</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item" asp-controller="Auth" asp-action="Logout">Выйти</a></li>
                    </ul>
                </div>
                }
                else
                {
                <a type="button" asp-controller="Auth" asp-action="Login" class="btn btn-outline-light me-2">Вход</a>
                <a type="button" asp-action="Register" asp-controller="Auth" class="btn btn-outline-light me-2" >Регистрация</a>
                }
            </div>
        </div>
    </header>

    <div class="container mt-4">
        <main>
            @RenderBody()
        </main>
    </div>

    <footer class="my-5">
        <ul class="nav justify-content-center border-top pt-3 pb-3 mt-3">
            <li class="nav-item"><a asp-controller="Home" asp-action="Index"  class="nav-link px-2 text-muted">Главная</a></li>
            <li class="nav-item"><a asp-controller="Blog" asp-action="List"  class="nav-link px-2 text-muted">Блог</a></li>
            <li class="nav-item"><a asp-controller="Home" asp-action="Index"  class="nav-link px-2 text-muted">FAQ</a></li>
            <li class="nav-item"><a asp-controller="Home" asp-action="Index"  class="nav-link px-2 text-muted">О сайте</a></li>
        </ul>
        <p class="text-center text-muted">&copy; 2021 NERV</p>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
