@model RegisterViewModel
@{
    ViewData["Title"] = "Регистрация";
}
 <div class="col-lg-4 offset-lg-4 col-sm-6 offset-sm-3 col-12">
    <form asp-action="Register" asp-controller="Auth" asp-anti-forgery="true">
        <h1 class="h3 mb-3 fw-normal text-center">Регистрация</h1>
        <div class="mb-2">
            <label asp-for="Email">Email</label><br>
            <input asp-for="Email" class="form-control"/>
            <span class="text-danger" asp-validation-for="Email"></span>
        </div>
        <div class="mb-2">
            <label asp-for="Password">Пароль</label><br>
            <input asp-for="Password" class="form-control"/>
            <span class="text-danger" asp-validation-for="Password"></span>
        </div>
        <div class="mb-2">
            <label asp-for="ConfirmPassword">Повторите пароль</label><br>
            <input asp-for="ConfirmPassword" class="form-control"/>
            <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
        </div>
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <button type="submit" class="w-100 btn btn-dark mt-3">Регистрация</button>
    </form>
</div>