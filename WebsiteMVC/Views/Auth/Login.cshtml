@model LoginViewModel
@{
    ViewData["Title"] = "Вход";
}

<div class="col-lg-4 offset-lg-4 col-sm-6 offset-sm-3 col-12">
    <form asp-action="Login" asp-controller="Auth" asp-anti-forgery="true">
    <h1 class="h3 mb-3 fw-normal text-center">Вход на сайт</h1>
    <div class="mb-3">
        <label asp-for="Email">Email</label>
        <input asp-for="Email" class="form-control">
        <span class="text-danger" asp-validation-for="Email"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Password">Пароль</label>
        <input asp-for="Password" class="form-control">
        <span class="text-danger" asp-validation-for="Password"></span>
    </div>
    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
    <button class="w-100 btn btn-dark mt-3" type="submit">Войти</button>
    </form>
</div>